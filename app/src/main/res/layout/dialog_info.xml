<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:keepScreenOn="true"
        android:orientation="vertical"
        android:background="@drawable/btn_rect_whitebg"
        android:layout_margin="@dimen/margin_middle"
        >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="提示"
        android:gravity="center"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="@color/colormain6"
        android:padding="20dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colormain6"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textStyle="bold"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:gravity="center"
        android:textColor="@color/colormain6"
        android:id="@+id/tip_text"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colormain6"
        />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:gravity="center"
            >
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="取消"
                android:id="@+id/cancle_dialog"
                android:layout_gravity="center"
                android:textSize="30sp"
                android:background="@drawable/btn_rect_whitebg"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/colormain6"
                android:gravity="center"
                android:layout_weight="1"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="确认"
                android:textColor="@color/white"
                android:id="@+id/ok_dialog"
                android:layout_gravity="center"
                android:textSize="30sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/setting_btnbg"
                android:gravity="center"
                android:layout_weight="1"
                />
        </LinearLayout>

</LinearLayout>