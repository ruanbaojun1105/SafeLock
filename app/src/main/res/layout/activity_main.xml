<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/safelock_bg"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <Button
            android:text="console"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/console"
            android:background="@null"/>

        <Button
            android:text="test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/test"
            android:background="@null"/>

        <Button
            android:text="loopback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/loopback"
            android:background="@null"/>

        <Button
            android:text="sending"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sending"
            android:background="@null"/>

        <Button
            android:text="serialport set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/serialport"
            android:background="@null"/>

        <Button
            android:text="存"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/save"
            android:background="@null"/>

        <Button
            android:text="取"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/get"
            android:background="@null"/>

        <Button
            android:text="后台管理"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/set"
            android:background="@null"/>
        <Button
            android:text="打开ercode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ercode"
            android:background="@null"/>

        <TextView
            android:text="设备id号："
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/device_text"
            android:background="@null"/>
    </LinearLayout>
</ScrollView>


